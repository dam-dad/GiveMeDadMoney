<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root"
            stylesheets="@../../css/MayorOMenor/MayorOMenor.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox alignment="CENTER" spacing="5.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="biggerButton" mnemonicParsing="false"
                        onAction="#onBiggerAction" prefWidth="62.0" text="Mayor"/>
                <Button fx:id="equalButton" mnemonicParsing="false"
                        onAction="#onEqualButton" prefWidth="62.0" text="Igual"/>
                <Button fx:id="lessButton" mnemonicParsing="false"
                        onAction="#onLessButton" prefWidth="62.0" text="Menor"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
    <left>
        <VBox alignment="CENTER" prefWidth="125.0" spacing="5.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Tu carta:"/>
                <Label fx:id="myNumLabel" text="Label">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </left>
    <right>
        <VBox alignment="CENTER" prefWidth="125.0" spacing="5.0"
              BorderPane.alignment="CENTER">
            <children>
                <Label text="Carta de la casa:">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
                <Label fx:id="homeNumLabel" text="Label">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </Label>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </right>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Tus puntos:">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <Label fx:id="puntosLabel" text="null"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <TextField fx:id="apuestaText"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <HBox spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false"
                        onAction="#onBackAction" prefWidth="60.0" text="Volver"/>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </top>
</BorderPane>