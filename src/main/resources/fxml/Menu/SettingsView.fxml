<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="settingsView"
	xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox alignment="CENTER_LEFT" spacing="5.0"
			BorderPane.alignment="CENTER">
			<children>
				<Button fx:id="backButton" mnemonicParsing="false"
					onAction="#onBackAcction" prefWidth="61.0" styleClass="backButton"
					text="&lt;-" />
			</children>
			<padding>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
	</top>
	<center>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
					<children>
						<Button fx:id="stopMusicButton" mnemonicParsing="false"
							onAction="#onMusicStopAcction" prefHeight="28.0" prefWidth="73.0"
							text="Parar" />
						<Button fx:id="playMusicButton" mnemonicParsing="false"
							onAction="#onMusicPlayAcction" prefHeight="28.0" prefWidth="73.0"
							text="Iniciar" />
						<Button mnemonicParsing="false"
							onAction="#onMusicRepeatAction" prefHeight="28.0"
							prefWidth="75.0" text="Reiniciar" />
						<Slider fx:id="volumenSlider" max="1.0"
							onDragDetected="#onVolumenChange" showTickMarks="true"
							value="0.1" />
					</children>
				</HBox>
			</children>
		</VBox>
	</center>
</BorderPane>
